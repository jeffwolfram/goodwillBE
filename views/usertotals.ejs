<%- include('layout') %>

<body class="usertotals">
    <%- include('header') %>
    <% let sumtotal = 0; %>
    <% let itemtotal = 0; %>
    <main>
        <div class="container">
            <h1><%= pageTitle %></h1>
            <table>
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Amount</th>
                        <th>Number</th>
                    </tr>
                </thead>
                <tbody>
                    <% details.forEach(detail => { %>
                        <% sumtotal += detail.amount %>
                        <% itemtotal += detail.number %>
                        <tr>
                            <td><%= new Date(detail.date).toDateString() %></td>
                            <td><%= detail.amount %></td>
                            <td><%= detail.number %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
            <% if (totals) { %>
                <p>Total amount for the last 30 days: <%= totals.total_amount %></p>
                <p>Total number for the last 30 days: <%= totals.total_number %></p>
                <p>Your item average cost for this month is <%= totals.total_amount / totals.total_number %>    </p>
            <% } %>
        </div>
    </main>

    <footer>
        <!-- Footer content goes here -->
    </footer>
</body>