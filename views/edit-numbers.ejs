<!DOCTYPE html>
<html>
<head>
    <title><%= pageTitle %></title>
</head>
<body>
    <h1>Edit Numbers Entry</h1>
    <form action="/editnumbers/<%= entry.id %>" method="post">
        <label for="amount">Amount:</label>
        <input type="text" id="amount" name="amount" value="<%= entry.amount %>" required>

        <label for="number">Number:</label>
        <input type="text" id="number" name="number" value="<%= entry.number %>" required>

        <label for="date">Date:</label>
        <input type="date" id="date" name="date" value="<%= entry.created_at.toISOString().split('T')[0] %>" required>

        <button type="submit">Update Entry</button>
    </form>
</body>
</html>
