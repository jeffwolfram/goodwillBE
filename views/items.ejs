<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title><%= pageTitle %></title>
</head>
<body>
    <h1><%= categoryName %></h1>
    <% if (locals.user && locals.user === 'admin') { %>
    <form action="/categories/<%= categoryId %>/items" method="post">
        <input type="text" name="name" id="name" placeholder="Item Name" required>
        <input type="text" step="0.01" name="price" placeholder="Price" required>
        <button type="submit">Add Item</button>
    </form>
    <% } %>
    <ul>
        <% items.forEach(item => { %>
            <li><%= item.name %> - $<%= item.price %></li>
        <% }) %>
    </ul>
    <a href="/categories">back</a>
</body>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        document.getElementById('name').focus();
    });
</script>
</html>
